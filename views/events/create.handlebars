<h1>Criar novo Evento</h1>
<form action="/events/add" method="POST" class="event-form">
    <div class="form-control">
        <label for="title">Título: </label>
        <input type="text" name="title" placeholder="Digite o evento">
    </div>

    <div class="form-control">
        <label for="description">Descrição: </label>
        <input type="text" name="description" placeholder="Descreva o evento...">
    </div>

    <div class="form-control">
        <label for="data">Data: </label>
        <input type="date" name="data" id="data">
    </div>

    <div class="form-control">
        <label for="hora">Hora: </label>
        <input type="time" name="hora" id="hora">
    </div>

    <div class="form-control">
        <label for="preco">Preço:</label>
        <input type="number" id="preco" name="preco" step="0.01" min="0">
    </div>

    <div class="form-control">
        <label for="city">Cidade: </label>
        <input type="text" name="city" placeholder="Digite a cidade do evento...">
    </div>

    <div class="form-control">
        <label for="location">Local: </label>
        <input type="text" name="location" placeholder="Digite o local do evento...">
    </div>

    <div class="form-control">
        <label for="imagem">Imagem (URL):</label>
        <input type="url" id="imagem" name="imagem">
    </div>

    <input type="submit" value="Criar" class="submit-button">
</form>
