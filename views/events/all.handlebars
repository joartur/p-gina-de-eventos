<h1>Todos os Eventos</h1>
<ul class="task-list">
    {{#each events}}
        <li>
            <img src="{{this.imagem}}" alt="{{this.title}}" style="max-width: 300px; height: auto;">            
            <br><br>
            {{this.title}} - {{this.description}} - {{this.data}} - {{this.hora}} - R${{this.preco}}
            <div class="actions">
                <form action="/events/updatestatus" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-check2"></i>
                    </button>
                </form>
                <a href="/events/edit/{{this.id}}"> <i class="bi bi-pencil-square"></i></a>
                <form action="/events/remove" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-trash"></i>
                    </button>                   
                </form>
            </div>
        </li>
    {{/each}}
</ul>