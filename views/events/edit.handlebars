<br><br><br>
    <h1>Editando o Evento: {{event.title}}</h1>
<form action="/events/edit" method="POST" class="event-form">
    <input type="hidden" name="id" value="{{event.id}}" />
    <div class="form-control">
        <label for="title">Título: </label>
        <input type="text" name="title" value="{{event.title}}">
    </div>

    <div class="form-control">
        <label for="description">Descrição: </label>
        <input type="text" name="description" value="{{event.description}}">
    </div>

    <div class="form-control">
        <label for="data">Data: </label>
        <input type="date" name="data" id="data" value="{{event.data}}">
    </div>

    <div class="form-control">
        <label for="hora">Hora: </label>
        <input type="time" name="hora" id="hora" value="{{event.hora}}">
    </div>

    <div class="form-control">
        <label for="preco">Preço:</label>
        <input type="number" id="preco" name="preco" step="0.01" min="0" value="{{event.preco}}">
    </div>

    <div class="form-control">
        <label for="city">Cidade: </label>
        <input type="text" name="city" value="{{event.city}}">
    </div>

    <div class="form-control">
        <label for="location">Local: </label>
        <input type="text" name="location" value="{{event.location}}">
    </div>

    <div class="form-control">
        <label for="imagem">Imagem (URL):</label>
        <input type="url" id="imagem" name="imagem" value="{{event.imagem}}">
    </div>

    <input type="submit" value="Editar" class="submit-button">
</form>